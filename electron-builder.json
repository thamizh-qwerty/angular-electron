{
    "productName": "angularElectron",
    "asar": false,
    "directories": {
        "output": "release/"
    },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.map",
        "!package.json",
        "!package-lock.json"
    ],
    "extraResources": [{
        "from": "dist",
        "to": "app",
        "filter": [
            "**/*"
        ]
    }],
    "win": {
        "artifactName": "tmtzhcr.setup.${version}.${ext}",
        "icon": "src/assets/icons",
        "target": [
            "nsis"
        ]
    },
    "mac": {
        "icon": "src/assets/icons",
        "target": [
            "dmg"
        ]
    },
    "nsis": {
        "deleteAppDataOnUninstall": true
    },
    "linux": {
        "artifactName": "tmtzhcr.setup.${version}.${ext}",
        "icon": "src/assets/icons",
        "target": [
            "deb"
        ]
    }
}